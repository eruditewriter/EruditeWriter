<Window x:Class="EruditeWriter.WindowMask"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EruditeWriter"
        mc:Ignorable="d"
        Title="Cover" ShowInTaskbar="False" ResizeMode="NoResize" WindowStyle="None" AllowsTransparency="True" Background="Transparent">
    <Grid Background="Transparent">
        <TextBlock VerticalAlignment="Top" HorizontalAlignment="Left" Height="24" Width="35" Margin ="1,0,0,0" Background="LightGray" Opacity=".75"/>
        <TextBlock VerticalAlignment="Top" HorizontalAlignment="Left" Height="28" Width="60" Margin="1,23,0,0" Background="LightGray" Opacity=".75"/>
        <TextBlock VerticalAlignment="Top" HorizontalAlignment="Right" Height="22" Width="31" Margin ="0,0,2,0" Background="LightGray" Opacity=".75"/>
    </Grid>
</Window>
